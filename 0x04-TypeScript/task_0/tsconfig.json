{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["js/**/*"]
}
